  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": false,
    "sourceMap": false,
    "module": "es2015",
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
